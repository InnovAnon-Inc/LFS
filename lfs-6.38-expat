#! /bin/sh
set -exo nounset

cd $LFS/sources

rm -rf expat-2.2.3
tar xf expat-2.2.3.tar.bz2
cd expat-2.2.3


sed -i 's|usr/bin/env |bin/|' run.sh.in

./configure --prefix=/usr --disable-static


make


test -z ${LFS_TEST+x} || \
make check

make install


install -v -dm755 /usr/share/doc/expat-2.2.4
install -v -m644 doc/*.{html,png,css} /usr/share/doc/expat-2.2.4






cd $LFS/sources
rm -rf expat-2.2.3