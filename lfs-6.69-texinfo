#! /bin/sh
set -exo nounset

cd $LFS/sources

rm -rf texinfo-6.4
tar xf texinfo-6.4.tar.xz
cd texinfo-6.4

./configure --prefix=/usr --disable-static

make

test -z ${LFS_TEST+x} || \
make check

make insatll

make TEXMF=/usr/share/texmf install-tex

pushd /usr/share/info
rm -v dir
for f in *
  do install-info $f dir 2>/dev/null
done
popd