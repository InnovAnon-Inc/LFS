#! /bin/sh
set -exo nounset

cd $LFS/sources

rm -rf mpfr-3.1.5
tar xf mpfr-3.1.5.tar.xz
cd mpfr-3.1.5

./configure --prefix=/usr        \
            --disable-static     \
            --enable-thread-safe \
            --docdir=/usr/share/doc/mpfr-3.1.5

make
make html

test -z ${LFS_TEST+x} || \
make check

make install
make install-html







cd $LFS/sources
rm -rf mpfr-3.1.5