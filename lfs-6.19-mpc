#! /bin/sh
set -exo nounset

cd $LFS/sources

rm -rf mpc-1.0.3
tar xf mpc-1.0.3.tar.gz
cd mpc-1.0.3

./configure --prefix=/usr    \
            --disable-static \
            --docdir=/usr/share/doc/mpc-1.0.3

make
make html

test -z ${LFS_TEST+x} || \
make check

make install
make install-html






cd $LFS/sources
rm -rf mpc-1.0.3