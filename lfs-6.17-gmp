#! /bin/sh
set -exo nounset

cd $LFS/sources

rm -rf gmp-6.1.2
tar xf gmp-6.1.2.tar.xz
cd gmp-6.1.2

./configure --prefix=/usr    \
            --enable-cxx     \
            --disable-static \
            --docdir=/usr/share/doc/gmp-6.1.2

make
make html

test -z ${LFS_TEST+x} || \
make check 2>&1 | tee gmp-check-log

test -z ${LFS_TEST+x} || \
awk '/# PASS:/{total+=$3} ; END{print total}' gmp-check-log

make install
make install-html






cd $LFS/sources
rm -rf gmp-6.1.2