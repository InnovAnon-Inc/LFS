#! /bin/sh
set -exo nounset

cd $LFS/sources

rm -rf util-linux-2.30.1
tar xf util-linux-2.30.1.tar.xz
cd util-linux-2.30.1

./configure --prefix=/tools                \
            --without-python               \
            --disable-makeinstall-chown    \
            --without-systemdsystemunitdir \
            --without-ncurses              \
            PKG_CONFIG=""

make

make install